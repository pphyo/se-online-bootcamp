<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.app.StudentView">
   <children>
      <HBox alignment="CENTER" prefHeight="90.0" style="-fx-background-color: teal;">
         <children>
            <Label text="Student Mark Program" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="30.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="radios" alignment="CENTER_LEFT" prefHeight="50.0" spacing="10.0">
         <children>
            <TextField fx:id="name" promptText="Search by name" />
            <TextField fx:id="total" promptText="Search by total" />
            <RadioButton mnemonicParsing="false" selected="true" text="All">
               <toggleGroup>
                  <ToggleGroup fx:id="result" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="Pass" toggleGroup="$result" />
            <RadioButton mnemonicParsing="false" text="Fail" toggleGroup="$result" />
            <Button mnemonicParsing="false" onAction="#search" prefWidth="71.0" text="Search" />
            <Button mnemonicParsing="false" onAction="#upload" prefWidth="71.0" text="Upload" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="tblList" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn prefWidth="75.0" text="Name">
                	<cellValueFactory>
                		<PropertyValueFactory property="name" />
                	</cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Myan">
                	<cellValueFactory>
                		<PropertyValueFactory property="myan" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="English">
                	<cellValueFactory>
                		<PropertyValueFactory property="eng" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Maths">
                	<cellValueFactory>
                		<PropertyValueFactory property="maths" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Che">
                	<cellValueFactory>
                		<PropertyValueFactory property="che" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Phy">
                	<cellValueFactory>
                		<PropertyValueFactory property="phy" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Bio">
                	<cellValueFactory>
                		<PropertyValueFactory property="bio" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Total">
                	<cellValueFactory>
                		<PropertyValueFactory property="total" />
                	</cellValueFactory>
                </TableColumn>
                  <TableColumn maxWidth="600.0" minWidth="30.0" prefWidth="40.0" text="Avg">
                     <cellValueFactory>
                        <PropertyValueFactory property="average" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn maxWidth="1200.0" minWidth="30.0" prefWidth="40.0" text="Result">
                	<cellValueFactory>
                		<PropertyValueFactory property="result" />
                	</cellValueFactory>
                </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
